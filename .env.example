NODE_ENV=production
PORT=4000

# Supabase
SUPABASE_URL=
SUPABASE_SERVICE_ROLE=
SUPABASE_ANON_KEY=
SUPABASE_STORAGE_BUCKET=product-images

# Admin (email-based admin enabled when ADMIN_EMAILS is set)
ADMIN_EMAILS=
ADMIN_PASSWORD=

# CORS (comma-separated origins for API when using split domains)
CORS_ORIGIN=

# Razorpay (optional)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Optional: override API base URL from UI if you deploy API separately
# API_BASE_URL=

# Supplier (Silverbene Dropshipping)
# Set NO_DB_CATALOG=1 to disable DB products and use live supplier data only
NO_DB_CATALOG=1
# Place your Silverbene Access Token here (or create a file named `silverbene.token` in project root)
SILVERBENE_ACCESS_TOKEN=
# Cache TTL for supplier API responses in milliseconds (default 300000 = 5 minutes)
SUPPLIER_CACHE_TTL_MS=300000
# INR conversion for supplier USD prices
EXCHANGE_RATE_USD_INR=83
# Optional price markup percentage on top of INR (e.g., 15 = +15%)
PRICE_MARKUP=15
